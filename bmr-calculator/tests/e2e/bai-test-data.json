  "ui_elements": {
    "title": "BAI - Body Adiposity Index",
    "value_selector": "span.text-5xl",
    "purple_box": {
      "class": "bg-purple-50",
      "title": "Unikalność BAI",
      "content": "Nie wymaga wagi - tylko wzrost i obwód bioder"
    },
    "indigo_box": {
      "class": "bg-indigo-50",
      "title": "Wzór BAI",
      "content": "BAI = (obwód bioder [cm] / wzrost [m]^1.5) - 18"
    },
    "scale": {
      "title": "Skala BAI",
      "colors": ["yellow", "green-light", "green-dark", "orange", "red"],
      "sections": 5
    }
  },
  "validation": {
    "show_component_when": {
      "height_provided": true,
      "hip_provided": true,
      "weight_required": false
    },
    "hide_component_when": {
      "hip_missing": true
    }
  },
  "responsive_breakpoints": {
    "mobile": {
      "width": 375,
      "height": 667
    },
    "tablet": {
      "width": 768,
      "height": 1024
    },
    "desktop": {
      "width": 1280
    }
  },
  "example_calculation": {
    "description": "Przykład obliczenia BAI dla kobiety",
    "input": {
      "height_cm": 170,
      "hip_cm": 95,
      "gender": "female"
    },
    "calculation_steps": [
      "1. Zamień wzrost na metry: 170 cm = 1.70 m",
      "2. Oblicz wzrost^1.5: 1.70^1.5 = 2.217",
      "3. Podziel obwód bioder przez wynik: 95 / 2.217 = 42.85",
      "4. Odejmij 18: 42.85 - 18 = 24.85",
      "5. Wynik: BAI = 24.85% (zaokrąglij do 25%)"
    ],
    "result": {
      "bai_value": 25,
      "category": "Atletyczna",
      "color": "green-light",
      "interpretation": "Prawidłowy poziom tkanki tłuszczowej dla kobiety"
    }
  }
}
